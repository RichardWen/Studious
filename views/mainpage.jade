html
  head
    title Studious
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    //if lte IE 8
      script(src='javascripts/ie/html5shiv.js')
    link(rel='stylesheet', href='css/main.css')
    //if lte IE 8
      link(rel='stylesheet', href='css/ie8.css')
    script(src='https://cdn.pubnub.com/pubnub-3.15.2.js')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.5.6/angular.min.js')
    script(src='https://cdn.pubnub.com/sdk/pubnub-angular/pubnub-angular-3.2.1.js')
    script(src='javascripts/chat_controller.js')
  body.no-sidebar
      #page-wrapper
        // Header
        #header
          // Inner
          .inner
            header
              h1
                a#logo(href='index.html') Studious
              hr
              p An online study environment built for students
          // Nav
          nav#nav
            ul
              li
                a(href='/') Home
              li
                a(href='/Comms') Study Environment
              li
                a(href='/TBD') Partners
              li
                a(href='/TBD') Merch
              li
                a(href='/TBD') Blog

        // Main
        .wrapper.style1
          .container
             chatbody(ng-app='app', ng-controller='ChatCtrl')
                 h2 Chat
                 div#theChat
                   ul.collection
                     li.collection-item.avatar(ng-repeat='message in messages')
                        img.circle(ng-src = "{{avatarUrl(message.sender_uuid)}}")
                        p
                          span.title Anonymous robot {{ message.sender_uuid }} at {{ message.date | date:"MM/dd/yyyy 'at' h:mma"}}
                          p
                          |  {{ message.content }}
                   chatfooter.teal
                    form.container(ng-submit='sendMessage()')
                     .row
                       .input-field.col.s5
                         i.prefix.mdi-communication-chat
                         input(ng-model='messageContent', type='text', placeholder='Type your message')
                         span.chip.left
                           div#user
                              |      You are Anonymous Robot {{uuid}}
                         button(type='submit') Send
                           i.mdi-content-send
             canvas#drawCanvas(width='800', height='480')
             script(src='javascripts/blackboard_controller.js')

        // Footer
        #footer
          .container
            .row
            hr
            .row
              .12u
                // Contact
                section.contact
                  header
                    h3 Any questions?
                  p
                    | Let us know by sending an e-mail to junkemail@notarealdomain.com.
                  ul.icons
                    li
                      a.icon.fa-twitter(href='#')
                        span.label Twitter
                    li
                      a.icon.fa-facebook(href='#')
                        span.label Facebook
                    li
                      a.icon.fa-instagram(href='#')
                        span.label Instagram
                    li
                      a.icon.fa-pinterest(href='#')
                        span.label Pinterest
                    li
                      a.icon.fa-dribbble(href='#')
                        span.label Dribbble
                    li
                      a.icon.fa-linkedin(href='#')
                        span.label Linkedin

                // Copyright
                .copyright
                  ul.menu
                    li Â© Penguin Development. All rights reserved.
                    li
                      | Design:
                      a(href='http://html5up.net') HTML5 UP
